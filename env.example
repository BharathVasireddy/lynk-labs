# Lynk Labs - Environment Variables Template
# Copy this file to .env.local for development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development (SQLite)
# DATABASE_URL="file:./dev.db"

# For production (PostgreSQL - Vercel Postgres)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Redis connection string (optional for development)
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Google OAuth credentials (removed - using email/password only)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
# AWS credentials for file storage
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="ap-south-1"
AWS_BUCKET_NAME="lynklabs-uploads"

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Stripe configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Razorpay configuration (for Indian payments)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# SendGrid configuration (Email)
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="noreply@lynklabs.com"
SENDGRID_FROM_NAME="Lynk Labs"

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Sentry configuration (Error monitoring)
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"

# =============================================================================
# API CONFIGURATIONS
# =============================================================================
# Google Maps API (for address validation)
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for additional token signing
JWT_SECRET="your-jwt-secret-key-change-this-in-production"

# Encryption key for sensitive data
ENCRYPTION_KEY="your-32-character-encryption-key"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV="development"

# Application URL
APP_URL="http://localhost:3000"

# File upload limits
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Debug flags (set to false in production)
DEBUG_MODE="true"
VERBOSE_LOGGING="true"

# Seed data configuration
ENABLE_SEED_DATA="true"
ADMIN_EMAIL="admin@lynklabs.com"
ADMIN_PASSWORD="admin123"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_HOME_VISITS="true"
ENABLE_ONLINE_PAYMENTS="true"

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Business hours (24-hour format)
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="18:00"

# Home visit configuration
HOME_VISIT_RADIUS_KM="50"
HOME_VISIT_LEAD_TIME_HOURS="24"

# Pricing configuration
DEFAULT_CURRENCY="INR"
TAX_RATE="0.18"  # 18% GST
FREE_DELIVERY_THRESHOLD="1000"  # Minimum order for free delivery

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local for development
# 2. Replace all placeholder values with actual credentials
# 3. Never commit .env.local or .env.production to version control
# 4. Use different values for development, staging, and production
# 5. Ensure all secrets are properly secured in production 

# Production Environment Variables for Vercel:
# DATABASE_URL="file:./dev.db"
# NEXTAUTH_SECRET="generate-a-secure-random-string-32-chars-min"
# NEXTAUTH_URL="https://your-app-name.vercel.app"
# JWT_SECRET="generate-another-secure-random-string-32-chars-min"

# To generate secure secrets, you can use:
# openssl rand -base64 32 

# Email (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Support contact
SUPPORT_PHONE="+91-1800-123-4567"

# File Upload
UPLOAD_DIR="./public/uploads" 
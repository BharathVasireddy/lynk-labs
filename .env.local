# Lynk Labs - Environment Variables Template
# Copy this file to .env.local for development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
DATABASE_URL="postgresql://username:password@localhost:5432/lynklabs_dev"

# Redis connection string (optional for development)
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-change-in-production"

# Google OAuth credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
# AWS credentials for file storage
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="ap-south-1"
AWS_BUCKET_NAME="lynklabs-uploads"

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Stripe configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Razorpay configuration (for Indian payments)
RAZORPAY_KEY_ID="rzp_test_your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# Twilio configuration (SMS and WhatsApp)
TWILIO_ACCOUNT_SID="ACyour_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"

# SendGrid configuration (Email)
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="noreply@lynklabs.com"
SENDGRID_FROM_NAME="Lynk Labs"

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Sentry configuration (Error monitoring)
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"

# =============================================================================
# API CONFIGURATIONS
# =============================================================================
# Google Maps API (for address validation)
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for additional token signing
JWT_SECRET="your-jwt-secret-key"

# Encryption key for sensitive data
ENCRYPTION_KEY="your-32-character-encryption-key"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV="development"

# Application URL
APP_URL="http://localhost:3000"

# File upload limits
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Debug flags (set to false in production)
DEBUG_MODE="true"
VERBOSE_LOGGING="true"

# Seed data configuration
ENABLE_SEED_DATA="true"
ADMIN_EMAIL="admin@lynklabs.com"
ADMIN_PASSWORD="admin123"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_WHATSAPP_NOTIFICATIONS="true"
ENABLE_SMS_NOTIFICATIONS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_HOME_VISITS="true"
ENABLE_ONLINE_PAYMENTS="true"

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Business hours (24-hour format)
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="18:00"

# Home visit configuration
HOME_VISIT_RADIUS_KM="50"
HOME_VISIT_LEAD_TIME_HOURS="24"

# Pricing configuration
DEFAULT_CURRENCY="INR"
TAX_RATE="0.18"  # 18% GST
FREE_DELIVERY_THRESHOLD="1000"  # Minimum order for free delivery

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local for development
# 2. Replace all placeholder values with actual credentials
# 3. Never commit .env.local or .env.production to version control
# 4. Use different values for development, staging, and production
# 5. Ensure all secrets are properly secured in production 
# Prevent direct access to uploaded files
Options -Indexes

# Prevent execution of PHP and other scripts
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Only allow specific file types
<FilesMatch "\.(pdf|jpg|jpeg|png|gif|doc|docx|txt)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent access to sensitive files
<FilesMatch "^\.">
    Order Allow,Deny
    Deny from all
</FilesMatch> 